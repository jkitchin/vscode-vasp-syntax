{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "XDATCAR",
  "scopeName": "source.xdatcar",
  "comment": "VASP XDATCAR molecular dynamics trajectory file",
  "patterns": [
    { "include": "#comment-line" },
    { "include": "#configuration-header" },
    { "include": "#element-symbols" },
    { "include": "#coordinate-type" },
    { "include": "#numbers" }
  ],
  "repository": {
    "comment-line": {
      "patterns": [
        {
          "name": "comment.line.xdatcar",
          "match": "^\\s*[#!].*$"
        }
      ]
    },
    "configuration-header": {
      "patterns": [
        {
          "name": "markup.heading.configuration.xdatcar",
          "match": "(?i)^\\s*(Direct\\s+)?configuration[=:\\s]*(\\d+)\\s*$",
          "captures": {
            "1": { "name": "keyword.control.direct.xdatcar" },
            "2": { "name": "constant.numeric.config.xdatcar" }
          }
        }
      ]
    },
    "element-symbols": {
      "patterns": [
        {
          "name": "entity.name.type.element.xdatcar",
          "match": "\\b(H|He|Li|Be|B|C|N|O|F|Ne|Na|Mg|Al|Si|P|S|Cl|Ar|K|Ca|Sc|Ti|V|Cr|Mn|Fe|Co|Ni|Cu|Zn|Ga|Ge|As|Se|Br|Kr|Rb|Sr|Y|Zr|Nb|Mo|Tc|Ru|Rh|Pd|Ag|Cd|In|Sn|Sb|Te|I|Xe|Cs|Ba|La|Ce|Pr|Nd|Pm|Sm|Eu|Gd|Tb|Dy|Ho|Er|Tm|Yb|Lu|Hf|Ta|W|Re|Os|Ir|Pt|Au|Hg|Tl|Pb|Bi|Po|At|Rn|Fr|Ra|Ac|Th|Pa|U|Np|Pu|Am|Cm|Bk|Cf|Es|Fm|Md|No|Lr|Rf|Db|Sg|Bh|Hs|Mt|Ds|Rg|Cn|Nh|Fl|Mc|Lv|Ts|Og)\\b"
        }
      ]
    },
    "coordinate-type": {
      "patterns": [
        {
          "name": "keyword.control.coordinate.xdatcar",
          "match": "(?i)^\\s*(Direct|Cartesian)\\s*$"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.xdatcar",
          "match": "[-+]?\\d*\\.?\\d+([eEdD][-+]?\\d+)?"
        }
      ]
    }
  }
}
